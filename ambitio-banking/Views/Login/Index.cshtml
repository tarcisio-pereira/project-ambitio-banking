@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemMErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button typer="button" class="btn btn-danger btn-sm close-alert" data-bs-dismmis="alert" arial-label="close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<div class="container gradient-custom mw-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <form id="login-form" class="form" asp-controller="Login" asp-action="Entrar" method="post">
                    <div class="card-body p-4 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Ambitio Banking</p>

                            <div class="form-outline form-white mb-4">
                                <input type="text" asp-for="Login" id="typeEmailX" class="form-control form-control-lg" placeholder="Digite o seu CPF" />
                                @Html.ValidationMessageFor(x => x.Login)
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" asp-for="Senha" id="typePasswordX" class="form-control form-control-lg" placeholder="Digite a sua senha" />
                                @Html.ValidationMessageFor(x => x.Senha)
                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Esqueceu a senha?</a></p>

                            <button class="btn btn-outline-light btn-lg px-5" asp-controller="Home" type="submit">Entrar</button>
                        </div>
                        <div>
                            <p class="mb-0">
                                Não tem uma conta? <a  class="text-white-50 fw-bold" asp-controller="Usuario" asp-action="Criar">Abra sua conta</a>
                            </p>
                        </div>
                    </div>
                    </form>
            </div>
        </div>
    </div>
</div>