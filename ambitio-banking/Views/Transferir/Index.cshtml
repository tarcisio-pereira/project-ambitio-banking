
@{
    ViewData["Title"] = "Transferir";
}
@*Sidebar página*@
<div class="d-flex">
    @await Component.InvokeAsync("Menu")
    @*Aqui começa o body da página*@
    <div class="d-flex flex-column flex-fill" id="ComponenteBody">
        <div class="d-flex flex-row">
            <div class="d-flex justify-content-start">
                <nav class="rounded shadow-sm bg-white" id="NavDataUser">
                    <div class="nav-text">
                        <p class="fw-normal" id="LabelNavDataUser"><strong>Tarcisio Mendes</strong></p>
                    </div>
                    <div class="nav-text">
                        <p class="fw-light" id="LabelNavDataCpf">115.302.167.51</p>
                    </div>
                </nav>
            </div>
        </div>

        <div class="d-flex">
            <div class="d-flex justify-content-start">
                <label class="fs-6" id="LabelTransfer"><strong>Transferir</strong></label>
            </div>
        </div>
        <hr>

        <div class="d-flex p-2 justify-content-center ">
            <form class="row g-3">
                <div class="d-flex bg-white rounded-3" id="ComponetTransfValue">
                    <div class="col-md-4">
                        <label for="validationServer01" class="form-label fw-normal">Valor da transferência</label>
                        <input type="text" class="form-control" id="InputValue" value="R$ 0,00">
                    </div>

                </div>

                <div class="d-flex">
                    <div class="d-flex justify-content-start">
                        <label class="fs-6" id="LabelTransfer"><strong>Dados do Cliente - Destino</strong></label>
                    </div>
                </div>
                <hr>

                <div class="d-flex flex-column bg-white rounded-3">

                    <div class="d-flex justify-content-between">
                        <div class="col-md-4">
                            <label for="validationServer01" class="form-label fw-normal">Nome</label>
                            <input type="text" class="form-control" id="InputName" value="Digite o nome">
                        </div>
                        <div class="col-md-4">
                            <label for="validationServer01" class="form-label fw-normal">CPF</label>
                            <input type="text" class="form-control" id="InputCpf" value="000.000.000-00">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div class="col-md-3">
                            <label for="validationServer04" class="form-label fw-normal">Tipo de conta</label>
                            <select class="form-select" id="validationServer04">
                                <option selected disabled value="SelectTipyAccount" id="InputTypeAccount">Selecione o tipo da conta</option>
                                <option>Conta Corrente</option>
                                <option>Conta Poupança</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="validationServer01" class="form-label fw-normal">Agencia</label>
                            <input type="text" class="form-control" id="InputCpf" value="0001">
                        </div>
                        <div class="col-md-4">
                            <label for="validationServer01" class="form-label fw-normal">Conta</label>
                            <input type="text" class="form-control" id="InputCpf" value="1234-5" required>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <button class="btn btn-dark rounded-3" id="ConfirmButton" type="submit">Confirmar</button>
                </div>
            </form>
        </div>
    </div>
</div>
