@{
    ViewData["Title"] = "Transferir";
}

<div class="text-center">
    <h3 class="display-4">Transferir</h3>
    <p>Aqui você pode transferir o seu dinheiro para contratos Ambitio</p>
</div>

<div class="container">
    <form class="row g-3">
        <div class="d-flex bg-white">
            <div class="col-md-4">
                <label for="validationServer01" class="form-label">Valor da transferência</label>
                <input type="text" class="form-control" id="InputValue" value="R$ 0,00" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>

        <div class="d-flex flex-column bg-white">

            <div class="d-flex justify-content-between">
                <div class="col-md-4">
                    <label for="validationServer01" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="InputName" value="Digite o nome" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="validationServer01" class="form-label">CPF</label>
                    <input type="text" class="form-control" id="InputCpf" value="000.000.000-00" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div class="col-md-3">
                    <label for="validationServer04" class="form-label">Tipo de conta</label>
                    <select class="form-select" id="validationServer04" aria-describedby="validationServer04Feedback" required>
                        <option selected disabled value="">Selecione o tipo da conta</option>
                        <option>Conta Corrente</option>
                        <option>Conta Poupança</option>
                    </select>
                    <div id="validationServer04Feedback" class="invalid-feedback">
                        Please select a valid state.
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="validationServer01" class="form-label">Agencia</label>
                    <input type="text" class="form-control" id="InputCpf" value="0001" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="validationServer01" class="form-label">Conta</label>
                    <input type="text" class="form-control" id="InputCpf" value="1234-5" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <button class="btn btn-primary rounded" type="submit">Confirmar</button>
        </div>
    </form>
</div>