@model UsuarioModel



<div class="sidebar d-flex flex-column p-3 bg-white shadow">
    <div class="d-flex">
        <div class="d-flex align-items-center">
            <img src="https://avatars.githubusercontent.com/u/61057709?s=96&v=4" alt="" width="32" height="32" class="rounded-circle me-2">
        </div>
        <div class="d-flex flex-column align-items-center">
            <div>
                <p class="fw-light"><strong>@Model.Nome</strong></p>
            </div>
            <div>
                <p class="fw-light">Conta: 1234-5</p>
            </div>
        </div>
    </div>
    <div>
        <div class="d-flex flex-column">
            <div class="d-flex justify-content-start">
                <p class="fw-normal">Saldo da Conta</p>
            </div>
            <div class="d-flex justify-content-start">
                <p class="fw-medium">R$&nbsp;<strong>39.980,28</strong></p>
            </div>
        </div>
    </div>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a class="nav-link text-dark" role="button" asp-area="" asp-controller="Home" asp-action="Index" id="Honepage-button">
                <img class="me-2" src="https://www.nicepng.com/png/full/17-178841_home-png-home-icon-free.png" alt="" width="20" height="20">
                Inicio
            </a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Transferir" asp-action="Index" id="tranfer-button">
                <img class="me-2" src="https://th.bing.com/th/id/OIP.4cI3IAEDTMFHiNUpM5FjbgHaHa?pid=ImgDet&rs=1" alt="" width="20" height="20">
                Transferir
            </a>
        </li>
        <li>
            <a class="nav-link text-dark" role="button" asp-area="" asp-controller="Pagar" asp-action="Index" id="pay-button">
                <img class="me-2" src="https://cdn-icons-png.flaticon.com/512/4652/4652089.png" alt="" width="20" height="25">
                Pagar
            </a>
        </li>
        @if (Model.Perfil == ambitio_banking.Enum.PerfilEnum.Admin)
        {
            <li>
                <a class="nav-link text-dark" role="button" asp-area="" asp-controller="Usuario" asp-action="Index" id="user-button">
                    <img class="me-2" src="https://cdn.icon-icons.com/icons2/1515/PNG/512/adduser_105070.png" width="23" height="25" alt="profile-user" />
                    Usuário
                </a>
            </li>
        }
        <li>
            <a class="nav-link text-dark" role="button" asp-area="" asp-controller="Login" asp-action="Sair" id="logout-button">
                <img class="me-2" src="https://www.svgrepo.com/show/21304/logout.svg" alt="" width="20" height="25">
                Sair
            </a>
        </li>
    </ul>
</div>
