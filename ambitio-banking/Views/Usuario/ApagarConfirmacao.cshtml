@model UsuarioModel
@{
    ViewData["Title"] = "Apagar Usuários";
}

<div>
    <div class="d-flex justify-content-center">
        <h1> Deseja apagar o contato?</h1>
    </div>

    <div>
        <div class="d-grid gap-2 col-6 mx-auto">
            <a class="btn btn-dark m-2 "role="button" asp-route-id="@Model.Id" asp-action="Apagar" asp-controller="Usuario">Confirmar</a>
            <a class="btn btn-warning m-2" role="button" asp-action="Index" asp-controller="Usuario">Cancelar</a>
        </div>
    </div>
</div>