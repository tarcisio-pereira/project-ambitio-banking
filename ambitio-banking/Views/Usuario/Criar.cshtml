@model UsuarioModel
@{
    ViewData["Title"] = "Criar Usuários";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

    <div class="container gradient-custom mw-100 px-0 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white">
                    <form id="login-form" class="form" asp-controller="Usuario" asp-action="Criar" method="post">
                        <div class="card-body p-4 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="fw-bold mb-2 text-uppercase">Cadastrar Usuários</h2>
                                <div class="form-outline form-white mb-4">
                                    <label class="text-start">Nome</label>
                                    <input type="text" asp-for="Nome" id="typeNome" class="form-control form-control-lg" placeholder="Digite o nome" />
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <label>CPF</label>
                                    <input type="text" asp-for="Cpf" id="typeCpf" class="form-control form-control-lg" placeholder="Digite o CPF " />
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label>Email</label>
                                    <input type="text" asp-for="Email" id="typeEmail" class="form-control form-control-lg" placeholder="Digite o Email" />
                                </div>

                                <div class=" dropdown form-outline form-white mb-4">
                                    <label>Senha</label>
                                    <input type="password" asp-for="Senha" id="typePassword"class="form-control form-control-lg" placeholder="Digite a senha"/>
                                </div>

                                @*<div class="d-flex dropdown form-black mb-4 start-0">
                                    <button  class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Selecione o perfil
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="1">Admin</a></li>
                                        <li><a class="dropdown-item" href="2">Padrão</a></li>
                                    </ul>
                                </div>*@

                                <button class="btn btn-outline-light btn-lg px-5" type="submit" role="button">Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>