@using ambitio_banking.Enum
@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuários";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="container gradient-custom mw-100 px-0 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white">
                <form id="login-form" class="form" asp-controller="Usuario" asp-action="Editar" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body p-4 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Editar Usuários</h2>
                            <div class="form-outline form-white mb-4">
                                <label class="text-start">Nome</label>
                                <input type="text" asp-for="Nome" id="typeNome" class="form-control form-control-lg" placeholder="Digite o nome" />
                                @Html.ValidationMessageFor(x => x.Nome)
                            </div>
                            <div class="form-outline form-white mb-4">
                                <label>CPF</label>
                                <input type="text" asp-for="Cpf" id="typeCpf" class="form-control form-control-lg" placeholder="Digite o CPF" />
                                @Html.ValidationMessageFor(x => x.Cpf)
                            </div>
                            <div class="form-outline form-white mb-4">
                                <label>Email</label>
                                <input type="text" asp-for="Email" id="typeEmail" class="form-control form-control-lg" placeholder="Digite o Email" />
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                            <div class=" dropdown form-outline form-white mb-4">
                                <label>Senha</label>
                                <input type="password" asp-for="Senha" id="typePassword" class="form-control form-control-lg" placeholder="Digite a senha" />
                                @Html.ValidationMessageFor(x => x.Senha)
                            </div>
                            <div class="d-flex dropdown form-white mb-4 start-0">
                                <select asp-for="Perfil">
                                    <option value="">Selecione o perfil</option>
                                    <option value="@PerfilEnum.Admin">Admin</option>
                                    <option value="@PerfilEnum.Padrao">Padrão</option>
                                </select>
                                @Html.ValidationMessageFor(x => x.Perfil)
                            </div>
                            <button class="btn btn-outline-light btn-lg px-5" type="submit" role="button">Alterar</button>
                            <button type="submit" asp-action="index" asp-controller="Usuario" class="btn btn-warning btn-lg px-5" role="button">Voltar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>